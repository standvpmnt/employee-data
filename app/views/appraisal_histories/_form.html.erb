<%= form_with model: [@employee, @appraisal_history] do |form| %>
  <div>
    <div class="row">
      <div class="col m-6">
        <%= form.label :effective_date, "Effective Date", class: @appraisal_history.new_record? ? '' : "active" %>
        <%= form.date_field :effective_date %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col m-6">
        <%= form.text_field :last_designation %>
        <%= form.label :last_designation, "Last Designation", class: @appraisal_history.new_record? ? '' : "active" %>
      </div>
      <div class="input-field col m-3">
        <%= form.number_field :last_salary %>
        <%= form.label :last_salary, "Last Monthly Salary (â‚¹)", class: @appraisal_history.new_record? ? '' : "active" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col m-6">
        <%= form.label :new_designation, "New Designation", class: @appraisal_history.new_record? ? '' : "active" %>
        <%= form.text_field :new_designation %>
      </div>
      <div class="input-field col m-3">
        <%= form.label :new_salary, "New Monthly Salary (â‚¹)", class: @appraisal_history.new_record? ? '' : "active" %>
        <%= form.number_field :new_salary %>
      </div>
    </div>
  </div>

  <%= form.hidden_field :updated_by, value:"Shubhang"%>
  <div class="col m3">
    <%= button_tag :submit, class:"btn waves-effect waves-light red" do %>
      <% if @appraisal_history.new_record? %>
        Submit <i class='material-icons right'>send</i>
      <% else %>
        Update <i class='material-icons right'>update</i>
      <% end %>
    <% end %>
  </div>

<% end %>
