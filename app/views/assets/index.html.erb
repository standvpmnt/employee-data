<div class="row">
  <div class="col m8 center">
    <h4>Assets</h4>
  </div>
  <div class="col m3 right-align" style="padding-top:20px;">
  <%= link_to "<i class='material-icons'>add</i>".html_safe, new_employee_asset_path, 
        class:"btn-floating btn waves-effect waves-light blue ocm-default"%>
  </div>
</div>

<table class="highlight centered">
  <thead>
    <tr>
      <th>Asset</th>
      <th>Identifier</th>
      <th>Note</th>
      <th>Updated By</th>
      <th>Image Tag</th>
    </tr>
  </thead>
  <tbody>
  <% @assets.each do |asset| %>
    <% count = 0 %>
    <tr>
      <td><%= asset.asset_detail.asset_category %></td>
      <td><%= asset.asset_detail.identifier_type + ": " + asset.asset_identifier %></td>
      <td><%= asset.note %></td>
      <td><%= asset.updated_by %></td>
      <td>
        <% asset.tags.each do |tag| %>
          <% count += 1%>
          <%= link_to "#{count}", rails_blob_path(tag, disposition: "attachment") %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>