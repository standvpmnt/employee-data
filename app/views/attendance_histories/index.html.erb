<div class="row">
  <div class="col m8">
  <h4>Attendance details of <%= @employee.name %></h4>
  </div>
  <div class="col m3 right-align" style="padding-top:20px;">
  <%= link_to "<i class='material-icons'>add</i>".html_safe, new_employee_attendance_history_path(@employee), 
        class:"btn-floating btn waves-effect waves-light blue ocm-default"%>
  </div>
</div>

<table class="highlight centered">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Number of Days</th>
        <th>Working Days</th>
        <th>Casual Leaves</th>
        <th>Sick Leaves</th>
        <th>Half Days</th>
        <th>Week Offs</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @attendance_histories.each do |attendance_history| %>
      <tr>
        <td><%= attendance_history.start_date.strftime("%d-%b-%y") %></td>
        <td><%= attendance_history.end_date.strftime("%d-%b-%y") %></td>
        <td><%= (attendance_history.end_date-attendance_history.start_date).to_i+1 %></td>
        <td><%= attendance_history.working_days %></td>
        <td><%= attendance_history.sick_leaves %></td>
        <td><%= attendance_history.casual_leaves %></td>
        <td><%= attendance_history.half_days%></td>
        <td><%= attendance_history.week_offs%></td>
        <td><%= link_to "<i class='material-icons'>edit</i> Open".html_safe, 
                edit_employee_attendance_history_path(@employee,attendance_history), 
                class:"btn-floating btn-medium waves-effect waves-light blue ocm-default" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>