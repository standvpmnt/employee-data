<%= form_with model: [@employee, @document] do |form| %>
  <div class="row">
    <div class="input-field col m6">
      <%= form.collection_select(:document_type_id, DocumentType.all, :id, :document_category, {:prompt => 'Select'}, class:"browser-default") %>
      <%= form.label :document_type_id, "Select Location", class:"active"%>
    </div>
  </div>

  <div class="row">
    <div class="input-field col m6">
      <%= form.file_field(:docs, multiple: true) %>
    </div>
  </div>

  <div class="col m3">
    <%= button_tag :submit, class:"btn waves-effect waves-light red" do %>
      <% if @document.new_record? %>
        Submit <i class='material-icons right'>send</i>
      <% else %>
        Update <i class='material-icons right'>update</i>
      <% end %>
    <% end %>
  </div>
<% end %>